function aa { # no this doesn't go in funcs because it's for editing aliases
	atom -w ~/.sh/aliases
	source ~/.sh/aliases
}
alias a="atom -n ."
alias git=hub
alias 8080="static -H '{\"Cache-Control\": \"no-cache, must-revalidate\", \"Access-Control-Allow-Origin\":\"*\"}' &open http://localhost:8080"
alias java7="export JAVA_HOME=\"/Library/Internet Plug-Ins/JavaAppletPlugin.plugin/Contents/Home\""
alias epsolon="ssh -l administrator epsolon77.com"
alias ni="npm i -S"
alias nd="npm i -D"
alias node-docs='open http://nodejs.org/docs/`node --version`/api/'
