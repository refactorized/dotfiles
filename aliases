function aa { # no this doesn't go in funcs because it's for editing aliases
	atom -w ~/.sh/aliases
	source ~/.sh/aliases
}
alias a="atom -n ."
alias git=hub
alias ni="npm i -S"
alias nd="npm i -D"
alias node-docs='open http://nodejs.org/docs/`node --version`/api/'
alias norp="NODE_PATH=`npm root -g` node"
alias unpm="find . -name "node_modules" -type d -prune -exec rm -rf '{}' +"
